    .cookie-consent {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: var(--secondary-color);
        color: white;
        padding: 20px;
        z-index: 1001;
        transform: translateY(100%);
        transition: transform 0.3s ease;
    }

    .cookie-consent.show {
        transform: translateY(0);
    }

    .cookie-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
