    .cookie-buttons {
        display: flex;
        gap: 15px;
    }

    .cookie-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background 0.3s ease;
